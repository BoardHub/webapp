{
  "hosting": {
    "site": "*",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
        "source": "/index.html",
        "destination": "/*/index.html"
      }, {
        "source": "/",
        "destination": "/*/index.html"
      }, {
        "source": "/*/index.html",
        "destination": "/*/index.html"
      }, {
        "source": "/*",
        "destination": "/*/index.html"
      }
    ]
  }
}
